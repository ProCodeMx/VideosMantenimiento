@model AplicacionMantenimiento.Models.Alquiler

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label for="VideoId" class="control-label col-md-2">Pelicula</label>
            <select class="form-control" data-val="true" data-val-required="El campo Video es obligatorio." id="VideoId" name="VideoId">
                <option selected="selected" value="">Selecciona una pelicula</option>
                @foreach (var videos in ViewBag.Videos)
                {
                    <option value="@videos.ID">@videos.Nombre</option>
                }
            </select>
            @Html.ValidationMessageFor(model => model.VideoId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
